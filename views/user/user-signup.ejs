<!DOCTYPE html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <title>User Signup</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link rel="stylesheet" href="/assets/css/main.css?v=3.4">
    <link rel="stylesheet" href="/css/form-error.css" />
</head>

<body>   
    <!-- Header -->
    <%- include('./partials/user/user-header.ejs') %>
    
    <!-- Mobile Header -->
    <%- include('./partials/user/user-mobile-header.ejs') %>
    
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/user" rel="nofollow">Home</a>
                    <span></span> Register
                </div>
            </div>
        </div>
        <section class="pt-25 pb-25">
            <div class="container">
                <div class="row">
                            <div class="col-lg-5 m-auto">
                                <% if (locals.errorMsg) { %>
                                    <p class="m-auto text-center mb-2"><%= errorMsg %> </p>
                                <% } %>  
                                <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                                    <div class="padding_eight_all bg-white">
                                        <div class="error text-danger mb-2 duplicate-error"><% if(locals.signupErr) {%>  <%= signupErr %> <% } %></div>
                                        <div class="heading_s1">
                                            <h3 class="mb-10">Create an Account</h3>
                                        </div>
                                        <p class="mb-10 font-sm">
                                            Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy
                                        </p>
                                        <form id="signupForm" action="/user/signup" method="post">
                                            <div class="form-group d-md-flex mb-2 w-100" style="column-gap: 20px;">
                                                <div class="form-group w-100">
                                                    <input type="text" id="firstName" name="firstName" placeholder="First name" <% if(locals.inputData) {%>  value = "<%= inputData.firstName %>"  <% } %> >
                                                    <div class="error text-danger ms-0"></div>
                                                </div>
                                                <div class="form-group w-100">
                                                    <input type="text" id="lastName" name="lastName" placeholder="Last name" <% if(locals.inputData) {%>  value = "<%= inputData.lastName %>"  <% } %>>
                                                    <div class="error text-danger ms-0"></div>
                                                </div>                                                
                                            </div>
                                            <div class="form-group d-md-flex mb-2 w-100" style="column-gap: 20px;">   
                                                <div class="form-group w-100">
                                                    <input type="text" id="email" name="email" placeholder="Email" <% if(locals.inputData) {%>  value = "<%= inputData.email %>"  <% } %>>
                                                    <div class="error text-danger "></div>
                                                </div> 
                                                <div class="form-group w-100">
                                                    <input type="text" id="phone" name="phone" placeholder="Mobile" <% if(locals.inputData) {%>  value = "<%= inputData.phone %>"  <% } %>>
                                                    <div class="error text-danger "></div>
                                                </div> 
                                            </div>
                                            <div class="form-group">
                                                <input  type="password" id="password" name="password" placeholder="Password" >
                                                <div class="error text-danger"></div>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" id="rePassword" name="rePassword" placeholder="Confirm password">
                                                <div class="error text-danger"></div>
                                            </div>                                            
                                            <div class="login_footer form-group" >
                                                    <div class="custome-checkbox form-group">
                                                        <input class="form-check-input" type="checkbox" name="checkbox" id="exampleCheckbox12" value="">
                                                        <label class="form-check-label" for="exampleCheckbox12"><span>I agree to terms &amp; Policy.</span></label>
                                                    </div>
                                                    <div class="error text-danger float-md-start"></div>
                                            </div>
                                            <div class="form-group text-center">
                                                <button type="submit" class="btn btn-fill-out btn-block hover-up">Submit &amp; Register</button>
                                            </div>
                                        </form>                                       
                                        <div class="text-muted text-center">Already have an account? <a href="/user/login">Sign in now</a></div>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
        </section>
    </main>  

    <!-- Footer -->
    <%- include('./partials/home/home-footer.ejs') %>

    <!-- Preloader Start -->
    <%- include('./partials/home/home-preloader.ejs') %>   

    <!-- Vendor JS-->
    <script src="/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="/assets/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/vendor/jquery-migrate-3.3.0.min.js"></script>
    <script src="/assets/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/plugins/slick.js"></script>
    <script src="/assets/js/plugins/jquery.syotimer.min.js"></script>
    <script src="/assets/js/plugins/wow.js"></script>
    <script src="/assets/js/plugins/jquery-ui.js"></script>
    <script src="/assets/js/plugins/perfect-scrollbar.js"></script>
    <script src="/assets/js/plugins/magnific-popup.js"></script>
    <script src="/assets/js/plugins/select2.min.js"></script>
    <script src="/assets/js/plugins/waypoints.js"></script>
    <script src="/assets/js/plugins/counterup.js"></script>
    <script src="/assets/js/plugins/jquery.countdown.min.js"></script>
    <script src="/assets/js/plugins/images-loaded.js"></script>
    <script src="/assets/js/plugins/isotope.js"></script>
    <script src="/assets/js/plugins/scrollup.js"></script>
    <script src="/assets/js/plugins/jquery.vticker-min.js"></script>
    <script src="/assets/js/plugins/jquery.theia.sticky.js"></script>
    <!-- Template  JS -->
    <script src="/assets/js/main.js?v=3.4"></script>
    <script src="/js/validate-signup.js"></script>    
</body>

</html>
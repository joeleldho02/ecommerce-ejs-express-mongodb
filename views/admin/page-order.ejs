        $(document).on( "click", '.edit_button',function(e) {
            const id = $(this).data('id');
            const categoryName = $(this).data('categoryname');
            const description = $(this).data('description');
            const isListed = $(this).data('listed');
            console.log(isListed);
            $(".edit-id").val(id);

        </header>
        <section class="content-main">
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex">
                        <h6 class="my-auto font-weight-bold text-primary">
                            <% if (locals.product) { %>
                                Edit Product Details
                            <% } else { %>
                                Enter Product Details
                            <% } %>
                        </h6>                        
                    </div>
                    <div class="card-body">
                    <form name="signupForm" id="signupForm" class="login-form px-md-5" 
                        <% if (locals.product) { %>
                            method='POST' action="/admin/edit-product">
                        <% } else { %>
                            method='POST' action="/admin/add-product">
                        <% } %>
                        <% if (locals.product) { %>
                            <div class="form-group">
                                <input type="hidden" id="productID" name="productID" class="form-control" value="<%= product._id %>" >
                            </div>
                        <% } %>
                        <div class="form-group finput d-flex">
                            <div class="icon d-flex align-items-center justify-content-center">
                                <span class="fa fa-user"></span>
                            </div>
                            <input type="text" class="form-control my-2 mx-2" id="productName" name="productName"
                                placeholder="Name" 
                                <% if (locals.product) { %>
                                    value="<%= product.productName %>"
                                <% } %>
                            />
                            <div class="error"></div>
                        </div>
                        <div class="form-group finput d-flex mt-3">
                            <div class="icon d-flex align-items-center justify-content-center">
                                <span class="fa fa-phone"></span>
                            </div>
                            <textarea class="form-control  my-2 mx-2" id="description" name="description"
                                placeholder="Description"><% if (locals.product) { %><%= product.description %><%} %></textarea>
                            <div class="error" ></div>
                        </div>                        
                        <div class=" d-flex align-items-center justify-content-between" style="column-gap: 20px;"> 
                            <div class="form-group d-flex w-25 mt-4">
                                <div class="icon me-2 d-flex align-items-center justify-content-center">
                                    <span class="fa fa-envelope"></span>
                                </div>
                                <select class="form-select form-control" id="category" name="category">
                                    <% if (locals.product) { %>
                                        <option selected><%= product.category %></option>
                                    <% } else { %>
                                        <option selected>All category</option>
                                    <% } %> 
                                    <!-- Add Category list as for loop here to create options -->
                                    <option>Arranger</option>
                                    <option>Workstation</option>
                                    <option>Stage</option>
                                </select>
                            </div>
                            <div class="form-group finput d-flex mt-3 ">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="fa fa-envelope"></span>
                                </div>
                                <input type="text" class="form-control my-2 mx-2" id="brand" name="brand"
                                    placeholder="Brand" 
                                    <% if (locals.product) { %>
                                        value="<%= product.brand %>"
                                    <% } %>
                                />
                                <div class="error"></div>
                            </div>
                            <div class="form-group finput d-flex mt-3 ">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="fa fa-envelope"></span>
                                </div>
                                <input type="text" class="form-control my-2 mx-2" id="regularPrice" name="regularPrice"
                                    placeholder="Regular price" 
                                    <% if (locals.product) { %>
                                        value="<%= product.regularPrice %>"
                                    <% } %>
                                />
                                <div class="error"></div>
                            </div>
                            <div class="form-group finput d-flex mt-3" >
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="fa fa-lock"></span>
                                </div>
                                <input type="text" class="form-control my-2 mx-2" id="salePrice" name="salePrice"
                                    placeholder="Sale price" 
                                    <% if (locals.product) { %>
                                        value="<%= product.salePrice %>"
                                    <% } %>
                                />
                                <div class="error"></div>
                            </div>
                            <div class="form-group finput d-flex mt-3" >
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="fa fa-lock"></span>
                                </div>
                                <input type="text" class="form-control my-2 mx-2" id="quantity" name="quantity"
                                    placeholder="Enter quantity" 
                                    <% if (locals.product) { %>
                                        value="<%= product.quantity %>"
                                    <% } %>
                                />
                                <div class="error"></div>
                            </div>
                        </div>
                        
                        <div class="form-group finput d-flex mt-3" >
                            <div class="icon d-flex align-items-center justify-content-center">
                                <span class="fa fa-lock"></span>
                            </div>
                            <input type="file" id="productImage" name="productImage" class="form-control my-2 mx-2" multiple
                            <% if (locals.product) { %>
                                value="<%= product.images[0] %>"
                            <% } %>
                            />
                            <div class="error"></div>
                        </div>
                        <!-- <div class="form-group finput d-flex mt-3" >
                            <div class="drag-area m-auto p-4">
